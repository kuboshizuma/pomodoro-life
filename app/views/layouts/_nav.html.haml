%nav#my-menu
  %ul.wrap_ul
    - if user_signed_in?
      %li
        %p.header_prof
          %img{ src: current_user.cover, width: '40px', height: '40px' }
          %span= current_user.name
      %li
        = link_to root_path do
          %i.fa.fa-home
          %span HOME
      - if @is_this_week_plan
        %li
          = link_to plans_path(week: 'this') do
            %i.fa.fa-calendar
            %span 今週のプラン
      - else
        %li
          = link_to new_plan_path(week: 'this') do
            %i.fa.fa-calendar-plus-o
            %span 今週のプランを立てる
      - if @is_next_week_plan
        %li
          = link_to plans_path do
            %i.fa.fa-calendar
            %span 来週のプラン
      - else
        %li
          = link_to new_plan_path do
            %i.fa.fa-calendar-plus-o
            %span 来週のプランを立てる
      %li
        = link_to destroy_user_session_path, method: :delete do
          %i.fa.fa-sign-out
          %span ログアウト
    - else
      %li
        = link_to user_facebook_omniauth_authorize_path do
          %i.fa.fa-facebook-square
          %span 無料Facebookログイン
